{
  "env": {
    "browser": true,
    "es2021": true
  },

  "ignorePatterns": [
    "webpack.config.js"
  ],

  "extends": [
    "airbnb-typescript/base",
    "plugin:prettier/recommended"
  ],

  "parser":"@typescript-eslint/parser",

  "parserOptions": {
    "project":"./tsconfig.json"
  },

  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],

  "rules" : {
    "import/prefer-default-export": "off",
    "no-control-regex": 0,
    "no-new": 0,
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true
      }
    ]
  }
}
