{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist/",
    "rootDir": "./src/",
    "noImplicitAny": true,
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true
  },

  "exclude": [
    "node_modules",
    "dist"
  ]
}